:: Widgets Stalk Actions [widget]

/*Hands */

<<widget "left_pursuit_grab">>
	<<if ($NPCList[0].state is "pursuit" or $NPCList[0].state is "chased") and $NPCList[0].distance lte 0>>
		<<set _leftaction["Grab"] to "pursuit_grab">>
	<</if>>
<</widget>>

<<widget "right_pursuit_grab">>
	<<if ($NPCList[0].state is "pursuit" or $NPCList[0].state is "chased") and $NPCList[0].distance lte 0>>
		<<set _rightaction["Grab"] to "pursuit_grab">>
	<</if>>
<</widget>>

/*Feet */
<<widget "feet_walk">>
	<<if $leftleg isnot "bound" and $rightleg isnot "bound" and $dissociation lt 2 and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased" and $feetuse isnot "run" and (currentSkillValue("feetskill") gte 200 or !$worn.feet.type.includes("heels"))>>
		<<set _feetaction["Walk"] to "walk">>
	<</if>>
<</widget>>

<<widget "feet_strut">>
	<<if $leftleg isnot "bound" and $rightleg isnot "bound" and $dissociation lt 2 and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased" and $feetuse isnot "run" and hasSexStat("exhibitionism", 2)>>
		<<set _feetaction["Strut"] to "strut">>
	<</if>>
<</widget>>

<<widget "feet_run">>
	<<if $leftleg isnot "bound" and $rightleg isnot "bound" and $dissociation lt 2 and (currentSkillValue("feetskill") gte 200 or !$worn.feet.type.includes("heels"))>>
		<<if $NPCList[0].state is "pursuit" or $NPCList[0].state is "chased">>
			<<set _feetaction["Chase"] to "run">>
		<<else>>
			<<set _feetaction["Run"] to "run">>
		<</if>>
	<</if>>
<</widget>>

<<widget "feet_stand">>
	<<if $dissociation lt 2 and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased" and $feetuse isnot "run">>
		<<set _feetaction["Stand still"] to "stand">>
	<</if>>
<</widget>>

<<widget "feet_hobble">>
	<<if $dissociation lt 2 and ($leftleg is "bound" or $rightleg is "bound") or (currentSkillValue("feetskill") lt 200 and $worn.feet.type.includes("heels"))>>
		<<set _feetaction["Hobble"] to "hobble">>
	<</if>>
<</widget>>

<<widget "feet_hide">>
	<<if $dissociation lt 2 and $panicviolence lte 0>>
		<<set _feetaction["Hide"] to "hide">>
	<</if>>
<</widget>>

<<widget "feet_ambush">>
	<<if $NPCList[0].legs is "run" and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased" and $transformationParts.traits.chase isnot "disabled">>
		<<set _feetaction["Ambush"] to "ambush">>
	<</if>>
<</widget>>

<<widget "feet_confront">>
	<<if $dissociation lt 2 and $panicviolence lte 0 and $NPCList[0].legs isnot "run" and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased">>
		<<set _feetaction["Confront"] to "confront">>
	<</if>>
<</widget>>

<<widget "head_turn">>
	<<if $dissociation lt 2 and $panicviolence lte 0 and $NPCList[0].legs isnot "run" and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased">>
		<<set _mouthaction["Look behind you"] to "turn">>
	<</if>>
<</widget>>

<<widget "head_down">>
	<<if $dissociation lt 2 and $panicviolence lte 0 and $NPCList[0].legs isnot "run" and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased">>
		<<set _mouthaction["Look at the ground"] to "down">>
	<</if>>
<</widget>>

<<widget "head_up">>
	<<if $dissociation lt 2 and $panicviolence lte 0 and $NPCList[0].legs isnot "run" and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased">>
		<<set _mouthaction["Keep your chin up"] to "up">>
	<</if>>
<</widget>>

<<widget "stalk_taunt">>
	<<if $leftleg isnot "bound" and $rightleg isnot "bound" and
	(currentSkillValue("feetskill") gte 200 or !$worn.feet.type.includes("heels")) and
	hasSexStat("promiscuity", 2) and $dissociation lt 2 and $panicviolence lte 0
	and $NPCList[0].legs isnot "run" and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased">>
		<<set _mouthaction["Taunt"] to "taunt">>
	<</if>>	
<</widget>>

<<widget "bottom_wiggle">>
	<<if $dissociation lt 2 and $panicviolence lte 0 and $NPCList[0].legs isnot "run" and $NPCList[0].state isnot "pursuit" and $NPCList[0].state isnot "chased">>
		<<set _anusaction["Wiggle"] to "wiggle">>
	<</if>>
<</widget>>
